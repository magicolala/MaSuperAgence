<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <div class="card-text">
            <p>{{ property.city }} ({{ property.postalCode }}) -
                <span class="font-weight-bold">{{ property.surface }}m²</span>
            </p>
        </div>
        <div class="text-primary" style="font-size: 2em; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>