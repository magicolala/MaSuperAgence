<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" class="card-img-top" />
    {% else %}
        <img src="{{ asset('images/empty.PNG') | imagine_filter('thumb') }}" class="card-img-top" />
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <div class="card-text">
            <p>{{ property.city }} ({{ property.postalCode }}) -
                <span class="font-weight-bold">{{ property.surface }}m²</span>
            </p>
        </div>
        <div class="text-primary" style="font-size: 2em; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>